};

&raid_mbox {
	/* Use only one ring to save memory */
	reg = <0x67400000 0x10000>;
	/delete-property/ dma-coherent;
};

&raid0 {
	/* Use only one ring to save memory */
	mboxes = <&raid_mbox 0 0x1 0xff00>;
};

