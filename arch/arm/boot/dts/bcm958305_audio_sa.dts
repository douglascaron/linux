/dts-v1/;

#include "bcm958305_audio_sa.dtsi"

/ {
	model = "Cygnus Wireless Audio (BCM958305_AUDIO_SA)";
	compatible = "brcm,bcm58305", "brcm,cygnus";

	usb_charger: charger {
		compatible = "gpio-charger";
		charger-type = "usb-sdp";
		gpios = <&gpio_asiu 117 1>;
	};

	vdd_1v0_reg: regulator@3 {
		compatible = "regulator-fixed";
		regulator-name = "vdd-1v0-reg";
		regulator-min-microvolt = <1000000>;
		regulator-max-microvolt = <1000000>;
		gpio = <&gpio_crmu 0 0>;
		enable-active-high;
		regulator-always-on;
	};
};

&cygnus_audio {
	ssp0: ssp_port@0 {
		status = "okay";
	};
};

&dte {
	brcm,dte-interval-ns = <10000000>;
};

&i2c0 {
	clock-frequency = <100000>;
	status = "okay";

	wolfson_8523: wm8523@1b {
		compatible = "wlf,wm8523";
		reg = <0x1b>;
		AVDD-supply = <&vdd_3v3_reg>;
		LINEVDD-supply = <&vdd_3v3_reg>;
	};

	battery: bq27425@55 {
		compatible = "ti,bq27425";
		reg = <0x55>;
		power-supplies = <&usb_charger>;
	};
};

&pinctrl {
	pinctrl-names = "default";
	pinctrl-0 = <&i2s0_default_mux &i2s1_default_mux
		&i2s2_default_mux &dte_lts_0>;
};

&vdd_3v3_reg {
	gpio = <&gpio_crmu 0 0>;
	enable-active-high;
};

&vdd_1v8_reg {
	gpio = <&gpio_crmu 0 0>;
	enable-active-high;
};

